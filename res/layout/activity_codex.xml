<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodexActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/bestiarybtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/monsters"
        android:layout_marginBottom="10dp"
        android:text="Bestiary" />

    <Button
        android:id="@+id/speciesbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/species"
        android:layout_marginBottom="10dp"
        android:text="Species" />

    <Button
        android:id="@+id/classesbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/classes"
        android:text="Classes" />


</LinearLayout>
